{
  "manifest_version": 2,

  "name": "Pokus",
  "description": "Website blocking extension",
  "version": "1.0",
  "author": "Sinokaba",
  "icons":{
    "16": "img/icon16x16.png",
    "48": "img/icon48x48.png",
    "128": "img/icon128x128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Let's Pokus"
  },
  "background":{
    "scripts": ["js/jquery.js", "js/background.js"],
    "persistent": true
  },
  "web_accessible_resources": [
    "inject.css"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["js/content.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "activeTab",
    "contextMenus",
    "alarms",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "storage",
    "<all_urls>",
    "notifications"
  ]
}